{
  "name": "@videre/querybuilder",
  "version": "1.0.0",
  "main": "build",
  "module": "src",
  "scripts": {
    "test": "jest src --testTimeout=30000",
    "test-watch": "jest --watchAll --verbose --testTimeout=30000",
    "build": "rimraf build && swc src -d build",
    "build-watch": "swc src -d build -w"
  },
  "dependencies": {
    "@videre/database": "workspace:packages/database",
    "@videre/magic": "workspace:packages/magic"
  },
  "devDependencies": {
    "jest": "^27.4.5"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/videre-project/videre-project.git",
    "directory": "packages/querybuilder"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/{!(index),}.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/events"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "@swc/jest"
    }
  }
}
